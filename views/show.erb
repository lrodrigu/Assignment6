<% if @user %>
<!-- happy path, user exists -->

	<h1>User Profile</h1>

	<h2><%= @user.full_name %></h2>
	<h2><%= @user.id %></h2>
	<h2><%= @user.email %></h2>
	
	<ul>

	<% @user.posts.each do |post| %>
		
		<li><%= post.title %></li>

	<% end %>

	</ul>

<% else %>
<!-- unhappy path, no user found -->

	<p> No user found! </p>

<% end %>


